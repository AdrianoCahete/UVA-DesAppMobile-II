<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora de Média"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- A1 Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A1 - Média das Avaliações On-line (Obrigatório)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a nota A1"
            android:inputType="numberDecimal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota entre 0 e 10 (aceita decimais: ex: 7,8)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- A2 Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A2 - Avaliação Presencial Regular"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a nota A2"
            android:inputType="numberDecimal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota entre 0 e 10 (aceita decimais: ex: 9,3)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- A3 Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A3 - Avaliação Presencial Substitutiva da A2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextA3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a nota A3"
            android:inputType="numberDecimal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota entre 0 e 10 (aceita decimais: ex: 6,0)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular NFp"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Result Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- NFp Result -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NFp (Nota Final Ponderada):"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="16dp" />

        <!-- Approval Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewApproved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
